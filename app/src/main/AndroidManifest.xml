<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m2f.wallapop"
    >

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".presentation.ComicListActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".presentation.ComicDetailActivity"
        android:label="@string/title_comic_detail"
        android:parentActivityName=".presentation.ComicListActivity"
        android:theme="@style/AppTheme.NoActionBar"
        >
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.m2f.wallapop.presentation.ComicListActivity"
          />
    </activity>
  </application>

</manifest>